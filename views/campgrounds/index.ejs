<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="row mb-3">
            <div class="colmd-12">
                <div id="clusterMap"></div>
            </div>
        </div>
        <div class="row">
            <h2 class="text-center mt-4">All Camgrounds</h2>
            <% for(let campground of campgrounds) {%>
                <div class="col-lg-4 col-md-6 col-sx-12 mb-4 mt-3">
                    <div class="card customCard cgCard">
                        <img src="<%= campground.images[0].url%>" alt="image" class="card-img-top fix-img-height">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title%>
                            </h5>
                            <p class="card-text textoverFlow fix-height">
                                <%= campground.description%>
                            </p>
                            <a href="/campgrounds/<%= campground._id%>" class="btn btn-outline-success btn-sm">Read More</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <script>
        const mapToken = '<%-process.env.mapbox_token%>';
        const campgrounds = {
            features: <%-JSON.stringify(campgrounds)%>
        };
    </script>
    <script type="text/javascript" src="/javascripts/clusterMap.js"></script>