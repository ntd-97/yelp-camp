<% layout('layouts/boilerplate') %>
    <div class="row mt-3 mb-5">
        <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
            <div class="card customCard shadow">
                <h2 class="text-center card-title mt-3">Updating campground</h2>
                <div class="card-body">
                    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="cgTitleEdit" class="form-label">Title:</label>
                            <input type="text" class="form-control" name="campground[title]" id="cgTitleEdit" placeholder="campground title" value="<%= campground.title%>" autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="cgLocationEdit" class="form-label">Location:</label>
                            <input type="text" class="form-control" name="campground[location]" id="cgLocationEdit" placeholder="campground location" value="<%= campground.location%>">
                        </div>
                        <div class="mb-3">
                            <label for="cgImageEdit" class="form-label">Images:</label>
                            <input type="file" class="form-control" name="images" id="cgImageEdit" multiple>
                        </div>
                        <div class="mb-3">
                            <% campground.images.forEach((img, index)=>{ %>
                                <div class="d-inline-block">
                                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="<%= img.filename%>">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= img.filename%>" id="image-<%= index %>">
                                        <label class="form-check-label" for="image-<%= index %> ">
                                  Delete Image
                                </label>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <div class="mb-3">
                            <label for="cgPriceEdit" class="form-label">Price:</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="cgPriceEdit">$</span>
                                <input type="number" min="0" oninput="validity.valid||(value='');" class="form-control" name="campground[price]" placeholder="0.00" aria-label="price" aria-describedby="cgPriceEdit" value="<%= campground.price%>">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="cgDescriptionEdit" class="form-label">Description:</label>
                            <textarea class="form-control" id="cgDescriptionEdit" name="campground[description]" rows="3"><%= campground.description%></textarea>
                        </div>
                        <button class="btn btn-success customBtn w-100">Update Campground</button>
                    </form>
                </div>
            </div>
        </div>
    </div>